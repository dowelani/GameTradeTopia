@model IEnumerable<GameTradeTopia.Models.Game>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<div id="home-body">

    <fieldset id="game-category">
        <legend>Category</legend>
        <a href="@Url.Action("Index", "Home", new { id = 0 })">
            <div class="radio-block" onclick=""> <label><input type="radio" name="categoty" />All</label></div>
        </a>
        <a href="@Url.Action("Index", "Home", new { id = 1 })">
            <div class="radio-block"> <label><input type="radio" name="categoty" />Action</label></div>
        </a>
        <a href="@Url.Action("Index", "Home", new { id = 2 })">
            <div class="radio-block"> <label><input type="radio" name="categoty" />Adventure</label></div>
        </a>
        <a href="@Url.Action("Index", "Home", new { id = 3 })">
            <div class="radio-block"> <label><input type="radio" name="categoty" />Racing</label></div>
        </a>
        <a href="@Url.Action("Index", "Home", new { id = 4 })">
            <div class="radio-block"> <label><input type="radio" name="categoty" />Arcade</label></div>
        </a>
        <a href="@Url.Action("Index", "Home", new { id = 5 })">
            <div class="radio-block"> <label><input type="radio" name="categoty" />Sports</label></div>
        </a>
    </fieldset>

    <section id="all-games">
       
        @foreach (var item in Model)
        {
            var image = string.Format("data:image/gif;base64,{0}", Convert.ToBase64String(item.image));
     
            <section class="game-container">
               
                <img src="@image" alt="@item.gameName.ToString()" class="game-image" />
                <h2> @item.gameName</h2>

            </section>
        }
    </section>
   
</div> 
@section styles{ 
    <link rel="stylesheet" href="~/Content/Home.css" type="text/css" />
}
