@model GameTradeTopia.Models.Trader

@{
    ViewBag.Title = "register";
    Layout = "~/Views/Shared/Login.cshtml";
}

<div style="display: flex; flex-direction: row;">
    <div style=" padding-right: 100px">
        <img src="~/images/gow.jpg" alt="need for speed" style="width:700px;height:800px" />
    </div>
    <div>
        <h3 style="color: rgba(129, 21, 141, 1);">Sign up</h3>
        @using (Html.BeginForm("register", "Trader", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">First Name*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">Last Name*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">Username*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">Email Address*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.emailAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.emailAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">Birthday*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.traderDOB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.traderDOB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">Password*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>


        @Html.HiddenFor(model => model.blacklisted)
        @Html.HiddenFor(model => model.approved)

        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">Country*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.country, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">City*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">Suburb*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.suburb, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.suburb, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">Street Address*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.streetAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.streetAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">Phone Number*</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.phoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.phoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="display:flex;flex-direction:column">
            <span style="color: rgba(129, 21, 141, 1);padding-left:15px">Upload copy of ID (pdf)*</span>
            <div class="col-md-10">
                <input type="file" accept="application/pdf" style="font-size:large;" id="idCop" name="idCop">
            </div>
        </div>

        @Html.HiddenFor(model => model.appealFeedback)

        @Html.HiddenFor(model => model.adminComments)

        @Html.HiddenFor(model => model.registrationDate)

        @Html.HiddenFor(model => model.idCopy)

        <div class="form-group" style="display:flex;flex-direction:column">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register now" style="border-radius: 45px; width: 100px; background: rgba(61, 247, 6, 1); color: rgba(129, 21, 141, 1); height: 55px" />
            </div>
        </div>
    </div>
        }
    </div>
</div>



