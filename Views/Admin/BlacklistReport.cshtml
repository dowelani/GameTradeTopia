@model IEnumerable<GameTradeTopia.Models.Trader>
@{
    ViewBag.Title = "BlacklistReport";
    Layout = "~/Views/Shared/adminLayout.cshtml";
}

<h3 style=" color: rgba(129, 21, 141, 1); padding-top:0;margin-top:0;">Generate BlackList Report</h3>

@foreach (var item in Model)
{
    if (item.blacklisted.Equals("yes"))
    {
        <div style="display: flex; flex-direction: row; padding-top: 20px;justify-content:space-between;width:50% ">
            <img src="~/images/user.png" alt="Avator" style=" border-radius: 50%; width: 55px; height: 55px; " />
            <span style="padding-top: 18px; font-size: large; color: rgba(129, 21, 141, 1); width:300px">@item.username</span>
            <a href="@Url.Action("addProfile", "Admin", new {id=item.traderID})">
                <input type="button" value="add profile" style="border-radius: 45px; background: rgba(61, 247, 6, 1); color: rgba(129, 21, 141, 1); height: 55px;align-self: " />
            </a>
            <a href="@Url.Action("removeProfile", "Admin", new {id=item.traderID})">
                <input type="button" value="remove profile" style="border-radius: 45px; background: rgba(61, 247, 6, 1); color: rgba(129, 21, 141, 1); height: 55px;align-self: " />
            </a>
        </div>
    }
}

